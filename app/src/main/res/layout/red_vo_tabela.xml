<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firstRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/rowSifraArtikl"
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_weight="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/rowNazivArtikl"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:background="#DFD1D1"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_weight="1"
        android:gravity="center"/>

    <TextView
        android:id="@+id/rowKolArtikl"
        android:layout_width="45sp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_weight="1"
        android:gravity="center"/>

    <TextView
        android:id="@+id/rowMaloprodaznaArtikl"
        android:layout_width="85sp"
        android:layout_height="wrap_content"
        android:background="#DFD1D1"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_weight="1"
        android:gravity="center"/>

    <TextView
        android:id="@+id/rowVkMaloprodaznaArtikl"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_weight="1"
        android:gravity="center"/>

    <CheckBox
        android:id="@+id/rowSelektiraj"
        android:layout_width="35sp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000"
        android:textSize="14sp"
        android:checked="true"/>

    <TextView
        android:id="@+id/rowIzbrisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/ic_close"
        android:textColor="#000"
        android:textSize="14sp" />

</TableRow>